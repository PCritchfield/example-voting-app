pipeline {
    agent{
        docker{
            image 'node:18.4.0-slim'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages{
        stage('build'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo "Compile the worker app"
                dir ('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo "package the worker app"
                dir ('result'){
                    sh 'npm install'
                    sh 'npm test'

                }
            }
        }
    }

    post{
        always{
            echo "Results pipeline completed"
        }
    }
}